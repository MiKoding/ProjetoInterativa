@model ProjetoInterativa.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro</h1>

<h4>Produtos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       

              <div class="form-group">
                <label style="color:blue"><h2>Nome do Produto</h2></label>
                <input asp-for="Nome" class="form-control"  placeholder="Digite o nome do produto ">
              </div>
              <div class="form-group">
                 <label style="color:blue"><h2>Fabricante</h2></label>
                <input asp-for="FabricanteNome" class="form-control"  placeholder="Selecione o Fabricante">
              </div> 
              <div class="form-group">
                 <label style="color:blue"><h2>Categoria</h2></label>
                <input asp-for="CategoriaFabricante" class="form-control"  placeholder="Selecione a categoria">
              </div> 
              <div class="form-group">
                 <label style="color:blue"><h2>Preço</h2></label>
                <input asp-for="Preco" class="form-control"  placeholder="Digite o preço">
              </div>
      
      <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>


        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
