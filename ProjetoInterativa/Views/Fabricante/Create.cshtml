@model ProjetoInterativa.Models.Fabricante

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro</h1>

<h4>Fabricante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       

  <div class="form-group">
    <label style="color:blue"><h2>Nome do Fabricante</h2></label>
    <input asp-for="FabricanteName" class="form-control"  placeholder="Digite o nome do fabricante">
  </div>
  <div class="form-group">
     <label style="color:blue"><h2>Categorias</h2></label>
    <input asp-for="Categoria1"  class="form-control" placeholder="Digite o nome da categoria 1">
    <input asp-for="Categoria2"  class="form-control" placeholder="Digite o nome da categoria 2">
    <input asp-for="Categoria3"  class="form-control" placeholder="Digite o nome da categoria 3">
  </div>
  
      <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>


        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
